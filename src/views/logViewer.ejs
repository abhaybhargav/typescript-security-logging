<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Security Log Viewer</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/dashboard">User Dashboard</a>
        <div class="navbar-nav ml-auto">
            <a class="nav-item nav-link" href="/dashboard">Back to Dashboard</a>
            <a class="nav-item nav-link" href="/logout">Logout</a>
        </div>
    </nav>

    <div class="container mt-4">
        <h1 class="mb-4">Security Log Viewer</h1>
        
        <% if (logEntries && logEntries.length > 0) { %>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Timestamp</th>
                        <th>Event</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    <% logEntries.forEach(entry => { %>
                        <tr>
                            <td><%= new Date(entry.timestamp).toLocaleString() %></td>
                            <td><%= entry.event %></td>
                            <td><pre><%= JSON.stringify(entry.details, null, 2) %></pre></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p>No log entries available.</p>
        <% } %>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>